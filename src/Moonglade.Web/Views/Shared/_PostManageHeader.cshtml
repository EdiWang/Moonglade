@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<h3>
    @Localizer["Posts"]
    <a class="btn btn-outline-success float-right" asp-controller="PostManage" asp-action="Create">
        <span class="icon-plus"></span>
        @Localizer["New"]
    </a>
</h3>
<hr />

<ul class="nav nav-tabs">
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(ViewBag.Title == "Manage Posts" ? "active" : null)" href="/admin/post">@Localizer["Published"]</a>
    </li>
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(ViewBag.Title == "Drafts" ? "active" : null)" href="/admin/post/draft">@Localizer["Drafts"]</a>
    </li>
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(currentAction == "RecycleBin" ? "active" : null)" asp-controller="PostManage" asp-action="RecycleBin">@Localizer["Recycle Bin"]</a>
    </li>
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(currentAction == "Insights" ? "active" : null)" asp-controller="PostManage" asp-action="Insights">@Localizer["Insights"]</a>
    </li>
</ul>
<div class="mb-3"></div>