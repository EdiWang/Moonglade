@model X.PagedList.StaticPagedList<Moonglade.Model.PostListItem>

@{
    ViewBag.TitlePrefix = null;
    ViewBag.ActionName = "Index";
    ViewBag.ShowBloggerIntroInXS = true;
}

<h3 class="h3-cat-list">
    <a class="float-right d-none d-md-block" asp-controller="Subscription" asp-action="Rss" target="_blank" title="@Localizer["Subscribe Recent 20 Posts"]">
        <span class="icon-rss"></span>
    </a>
    <span>
        @Localizer["All Posts"]
    </span>
</h3>
<hr />

@if (null != ViewBag.IsServerError && ViewBag.IsServerError)
{
    <partial name="_ServerErrorMessage" />
}
else
{
    if (Model.Any())
    {
        <partial name="_PostList" />
    }
    else
    {
        <div class="alert alert-info">
            @Localizer["No Posts."]
        </div>
    }
}