@{
    Layout = "_LayoutAdmin";
}

@model WatermarkSettingsViewModel

<partial name="_SettingsHeader" />

<form id="form-settings" asp-controller="Settings" asp-action="WatermarkSettings"
      data-ajax-begin="onUpdateSettingsBegin"
      data-ajax-complete="onUpdateSettingsComplete"
      data-ajax-failure="onUpdateSettingsFailed"
      data-ajax-success="onUpdateSettingsSuccess"
      data-ajax="true"
      data-ajax-method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row">
        <div class="col-6">
            <div class="card mb-4">
                <div class="card-header">General</div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <label asp-for="IsEnabled" class="control-label"></label>
                        <div class="material-switch float-right">
                            <input @(Model.IsEnabled ? "checked=\"checked\"" : "") id="IsEnabled" name="IsEnabled" type="checkbox" value="true">
                            <label for="IsEnabled" class="label-success"></label>
                            <input name="IsEnabled" type="hidden" value="false">
                        </div>
                    </li>
                    <li class="list-group-item">
                        <label asp-for="KeepOriginImage" class="control-label"></label>
                        <div class="material-switch float-right">
                            <input @(Model.KeepOriginImage ? "checked=\"checked\"" : "") id="KeepOriginImage" name="KeepOriginImage" type="checkbox" value="true">
                            <label for="KeepOriginImage" class="label-success"></label>
                            <input name="KeepOriginImage" type="hidden" value="false">
                        </div>
                    </li>
                </ul>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="FontSize" class="control-label"></label>
                        <input asp-for="FontSize" class="form-control" />
                        <span asp-validation-for="FontSize" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WatermarkText" class="control-label"></label>
                        <input asp-for="WatermarkText" class="form-control" />
                        <span asp-validation-for="WatermarkText" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr />
    <div class="form-group">
        <input id="btn-save-settings" type="submit" value="Save" class="btn btn-success" />
    </div>
</form>