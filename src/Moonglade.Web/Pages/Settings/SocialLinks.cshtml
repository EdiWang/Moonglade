@page "/admin/settings/social-links"
@Html.AntiForgeryToken()
@{
    var bc = BlogConfig.SocialLinkSettings;
    var settings = new SocialLinkSettingsJsonModel
            {
                IsEnabled = bc.IsEnabled,
                JsonData = bc.Links.ToJson(true)
            };
}

@section scripts {
    <script type="module" src="~/js/app/admin.settings.sociallinks.mjs" asp-append-version="true"></script>
}

@section head {
    <style>
        .th-actions {
            width: 140px;
        }

        .form-control-url {
            width: 300px;
        }
        
        .settings-entry-icon {
            font-size: 1.5rem;
            color: var(--bs-primary);
        }
        
        #linksTable tbody tr:hover {
            background-color: var(--bs-gray-50);
        }
        
        .btn-group .btn {
            border-radius: 0.25rem;
        }
        
        .btn-group .btn + .btn {
            margin-left: 0.125rem;
        }
        
        .text-break {
            word-break: break-word;
            max-width: 300px;
        }
        
        @@media (max-width: 768px) {
            .form-control-url {
                width: 200px;
            }
            
            .text-break {
                max-width: 150px;
            }
        }
    </style>
}

@section admintoolbar {
    <partial name="_SettingsHeader" />
}

<form id="form-settings" asp-controller="Settings" asp-action="SocialLink" novalidate>
    <div class="admin-settings-entry-container">
        <div class="settings-entry row align-items-center py-3 px-2 rounded-3 border mb-3">
            <div class="col-auto">
                <i class="bi-menu-app settings-entry-icon"></i>
            </div>
            <div class="col">
                <label asp-for="@settings.IsEnabled" class="form-check-label"></label>
            </div>
            <div class="col-md-5 text-end">
                <div class="form-check form-switch form-control-lg">
                    <input type="hidden" name="IsEnabled" value="false">
                    <input type="checkbox" name="IsEnabled" value="true" class="form-check-input" @(@settings.IsEnabled ? "checked" : null) />
                </div>
            </div>
        </div>

        <table id="linksTable" class="table table-bordered table-hover p-3 rounded-3">
            <thead class="table-light">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Icon</th>
                    <th scope="col" class="th-url">URL</th>
                    <th scope="col" class="th-actions text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr id="empty-state" style="display: none;">
                    <td colspan="4" class="text-center text-muted py-4">
                        <i class="bi-info-circle me-2"></i>
                        No social links configured. Add your first link above.
                    </td>
                </tr>
            </tbody>
        </table>

        <div id="form" class="row g-2 align-items-center">
            <div class="col-auto">
                <label for="name" class="form-label">Name</label>
            </div>
            <div class="col-auto">
                <input type="text" id="name" class="form-control form-control-sm" 
                       aria-describedby="nameHelp" maxlength="50" autocomplete="off">
                <div id="nameHelp" class="form-text visually-hidden">Enter a unique name for the social link</div>
            </div>
            <div class="col-auto">
                <label for="icon" class="form-label">Icon Class</label>
            </div>
            <div class="col-auto">
                <input type="text" id="icon" class="form-control form-control-sm" 
                       placeholder="e.g., bi-twitter, fa-facebook" 
                       aria-describedby="iconHelp" maxlength="100" autocomplete="off">
                <div id="iconHelp" class="form-text visually-hidden">CSS class for the icon (Bootstrap Icons or Font Awesome)</div>
            </div>
            <div class="col-auto">
                <label for="url" class="form-label">URL</label>
            </div>
            <div class="col-auto">
                <input type="url" id="url" class="form-control form-control-sm form-control-url" 
                       placeholder="https://example.com" 
                       aria-describedby="urlHelp" autocomplete="url">
                <div id="urlHelp" class="form-text visually-hidden">Full URL including protocol (https://)</div>
            </div>
            <div class="col-auto">
                <button type="button" id="btn-update" class="btn btn-sm btn-accent">
                    <span id="btn-update-text">Add</span>
                </button>
            </div>
            <div class="col-auto">
                <button type="button" id="btn-cancel" class="btn btn-sm btn-outline-secondary" style="display: none;">
                    Cancel
                </button>
            </div>
        </div>

        <div id="error" class="alert alert-danger mt-2" style="display: none;" role="alert">
            <i class="bi-exclamation-triangle me-1"></i>
            <span id="error-message"></span>
        </div>
    </div>

    <textarea asp-for="@settings.JsonData" class="settings-jsoncontent-textarea d-none"></textarea>

    <div class="admin-settings-action-container border-top pt-2 mt-2">
        <button type="submit" class="btn btn-outline-accent" id="btn-save-settings">
            @SharedLocalizer["Save"]
        </button>
    </div>
</form>