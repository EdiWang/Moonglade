@page "/admin/settings/subscription"
@model Moonglade.Web.Pages.Settings.SubscriptionModel
@section scripts{
    <script>
        const form = document.querySelector('#form-settings');
        form.addEventListener('submit', handleSettingsSubmit);
    </script>
}

<partial name="_SettingsHeader" />
<div class="ps-4 pe-4 pt-4">
    <form id="form-settings" asp-controller="Settings" asp-action="Subscription" spellcheck="false">
        <div class="row">
            <div class="col-lg-6">
                <div class="row g-3 align-items-center settings-entry mb-4">
                    <div class="col-auto">
                        <i class="bi-hr settings-entry-icon"></i>
                    </div>
                    <div class="col">
                        <label asp-for="ViewModel.RssTitle"></label>
                        <div class="form-text">
                            Title on RSS/ATOM readers
                        </div>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="ViewModel.RssTitle" class="form-control" required maxlength="64"/>
                    </div>
                </div>

                <div class="row g-3 align-items-center settings-entry mb-4">
                    <div class="col-auto">
                        <i class="bi-person settings-entry-icon"></i>
                    </div>
                    <div class="col">
                        <label class="form-label" asp-for="ViewModel.AuthorName"></label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="ViewModel.AuthorName" class="form-control" required maxlength="32" />
                    </div>
                </div>

                <div class="row g-3 align-items-center settings-entry mb-4">
                    <div class="col-auto">
                        <i class="bi-check2 settings-entry-icon"></i>
                    </div>
                    <div class="col">
                        <label class="form-label" asp-for="ViewModel.RssCopyright"></label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="ViewModel.RssCopyright" class="form-control" required maxlength="64"/>
                    </div>
                </div>

                <div class="row g-3 align-items-center settings-entry mb-4">
                    <div class="col-auto">
                        <i class="bi-list-ol settings-entry-icon"></i>
                    </div>
                    <div class="col">
                        <label asp-for="ViewModel.RssItemCount"></label>
                        <div class="form-text">@Localizer["The number of entries to include in RSS feed."]</div>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="ViewModel.RssItemCount" class="form-control" required />
                    </div>
                </div>

                <div class="row g-3 align-items-center settings-entry mb-4">
                    <div class="col-auto">
                        <i class="bi-justify-left settings-entry-icon"></i>
                    </div>
                    <div class="col">
                        <label asp-for="ViewModel.UseFullContent" class="form-check-label"></label>
                    </div>
                    <div class="col-md-5 text-end">
                        <div class="form-check form-switch">
                            <input type="checkbox" name="UseFullContent" value="true" class="form-check-input" @(Model.ViewModel.UseFullContent ? "checked" : null)  />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mb-2">
            <input id="btn-save-settings" type="submit" value="@Localizer["Save"]" class="btn btn-outline-accent" />
        </div>
    </form>
</div>