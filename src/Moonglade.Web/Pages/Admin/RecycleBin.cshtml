@page "/admin/post/recycle-bin"
@{
    ViewBag.Title = "Recycle Bin";
    ViewBag.XData = "recycleBinManager";
}

@section scripts {
    <script type="module" src="~/js/app/admin.recyclebin.mjs"></script>
}

<div id="localizedStrings" style="display:none"
     data-post-deleted="@SharedLocalizer["Post deleted"]" 
     data-post-restored="@SharedLocalizer["Post restored"]" 
     data-cleared="@SharedLocalizer["Cleared"]" 
     data-confirm-delete="@SharedLocalizer["Are you sure you want to delete \"{0}\"?"]">
</div>

@section admintoolbar {
    <partial name="_PostManageHeader" />
}

@Html.AntiForgeryToken()

<div>
    <div x-show="isLoading"
         class="text-muted mb-3"
         :class="{ 'd-flex align-items-center': isLoading }">
        <div class="spinner-border spinner-border-sm me-2" role="status"></div>
        <span>@SharedLocalizer["Loading..."]</span>
    </div>

    <div x-show="!isLoading && !hasPosts">
        <partial name="_NoPosts" />
    </div>

    <div x-show="!isLoading && hasPosts" class="admin-main-entry-container">
        <template x-for="post in sortedPosts" :key="post.id">
            <div :id="`post-${post.id}`" class="admin-post-entry p-3 mb-2 rounded-3 shadow-sm border">
                <div class="d-flex">
                    <div class="flex-grow-1">
                        <h6 x-text="post.title"></h6>
                        <div>
                            <i class="bi-calendar-event"></i>
                            <time :data-utc-label="post.createTimeUtc" x-text="post.createTimeUtc"></time>
                        </div>
                    </div>
                    <div>
                        <button class="btn btn-sm btn-outline-accent btn-restore" 
                                x-on:click="restorePost(post.id)">
                            <i class="bi-reply-fill"></i> @SharedLocalizer["Restore"]
                        </button>
                        <button class="btn btn-outline-danger btn-sm btn-delete" 
                                x-on:click="confirmDelete(post.id, post.title)">
                            <i class="bi-trash"></i> @SharedLocalizer["Delete"]
                        </button>
                    </div>
                </div>
            </div>
        </template>
    </div>

    <div x-show="!isLoading && hasPosts" class="admin-settings-action-container border-top pt-2 mt-2">
        <button x-on:click="confirmEmptyRecycleBin" class="btn btn-outline-danger btn-empty-recbin mb-3">
            <i class="bi-trash"></i>
            @SharedLocalizer["Empty Recycle Bin"]
        </button>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">@SharedLocalizer["Delete Confirmation"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p x-text="deleteMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@SharedLocalizer["Cancel"]</button>
                <button type="button" class="btn btn-outline-danger" x-on:click="executeDelete">
                    <i class="bi-trash"></i> @SharedLocalizer["Delete"]
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Empty Recycle Bin Confirmation Modal -->
<div class="modal fade" id="emptyBinModal" tabindex="-1" aria-labelledby="emptyBinModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="emptyBinModalLabel">@SharedLocalizer["Empty Recycle Bin"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>@SharedLocalizer["Are you sure you want to empty the recycle bin? This action cannot be undone."]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@SharedLocalizer["Cancel"]</button>
                <button type="button" class="btn btn-outline-danger" x-on:click="executeEmptyRecycleBin">
                    <i class="bi-trash"></i> @SharedLocalizer["Empty Recycle Bin"]
                </button>
            </div>
        </div>
    </div>
</div>