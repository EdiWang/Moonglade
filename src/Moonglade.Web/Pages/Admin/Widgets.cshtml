@page "/admin/widgets"

@{
    ViewBag.Title = "Widgets";
    ViewBag.XData = "widgetManager";
}

@section scripts {
    <script type="module" src="~/js/app/admin.widgets.mjs"></script>
}

<div id="localizedStrings" style="display:none"
     data-delete-widget="@SharedLocalizer["Delete this widget?"]"
     data-widget-deleted="@SharedLocalizer["Widget deleted"]"
     data-widget-created="@SharedLocalizer["Widget created"]"
     data-widget-updated="@SharedLocalizer["Widget updated"]"
     data-remove-link="@SharedLocalizer["Are you sure you want to remove this link?"]"
     data-name-url-required="@SharedLocalizer["Name and URL are required"]"
     data-image-url-required="@SharedLocalizer["Image URL is required"]"
     data-text-url-required="@SharedLocalizer["Button text and URL are required"]"
     data-max-buttons="@SharedLocalizer["You can add up to 3 buttons"]"
     data-remove-button="@SharedLocalizer["Are you sure you want to remove this button?"]">
</div>

@section admintoolbar {
    <div class="admin-toolbar pb-2 border-bottom mb-3">
        <a x-on:click="initCreateWidget()" class="btn btn-outline-accent" role="button">
            <i class="bi-plus-lg"></i>
            @SharedLocalizer["New"]
        </a>
    </div>
}

@Html.AntiForgeryToken()

<div x-show="isLoading"
     class="text-muted mb-3"
     :class="{ 'd-flex align-items-center': isLoading }">
    <div class="spinner-border spinner-border-sm me-2" role="status"></div>
    <span>@SharedLocalizer["Loading widgets..."]</span>
</div>

<div x-show="!isLoading && !hasWidgets" class="alert alert-info">
    @SharedLocalizer["No widgets yet."]
</div>

<section class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <template x-for="widget in sortedWidgets" :key="widget.id">
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h6 class="card-title mb-0">
                            <span x-text="widget.title"></span>
                            <span x-show="!widget.isEnabled" class="badge bg-secondary ms-1">Disabled</span>
                        </h6>
                    </div>
                    <hr class="my-2" />
                    <div x-html="renderWidgetContent(widget)" class="small"></div>
                </div>
                <div class="card-footer">
                    <a x-on:click="editWidget(widget.id)" class="btn btn-sm btn-outline-accent me-2" role="button">
                        <i class="bi-pen"></i> Edit
                    </a>
                    <a x-on:click="deleteWidget(widget.id)" class="btn btn-sm btn-outline-danger" role="button">
                        <i class="bi-trash"></i>
                    </a>
                </div>
            </div>
        </div>
    </template>
</section>

<div class="offcanvas offcanvas-end" tabindex="-1" x-ref="editWidgetCanvas" aria-labelledby="editWidgetCanvasLabel" style="width: 500px;">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="editWidgetCanvasLabel">@SharedLocalizer["Widget Information"]</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body d-flex flex-column p-0">
        <form x-on:submit.prevent="handleSubmit()" class="d-flex flex-column h-100">
            <!-- Form Fields - Takes remaining space -->
            <div class="flex-grow-1 p-3 pb-0" style="min-height: 0; overflow-y: auto;">
                <div class="mb-3">
                    <label for="widget-title" class="form-label">@SharedLocalizer["Title"]</label>
                    <input x-model="formData.title" type="text" id="widget-title" class="form-control" maxlength="128" required />
                </div>
                <div class="mb-3">
                    <label for="widget-type" class="form-label">@SharedLocalizer["Widget Type"]</label>
                    <select x-model="formData.widgetType" x-on:change="onWidgetTypeChange()" id="widget-type" class="form-select" required>
                        <option value="LinkList">Link List</option>
                        <option value="ImageLink">Image Link</option>
                        <option value="ButtonLink">Button Link</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="widget-display-order" class="form-label">@SharedLocalizer["Display Order"]</label>
                    <input x-model.number="formData.displayOrder" type="number" id="widget-display-order" class="form-control" min="-3" max="999" required />
                    <small class="form-text text-muted">@SharedLocalizer["-3: before Profile, -2: before Tags, -1: before Categories, 0+: after Categories"]</small>
                </div>
                <div class="mb-3 form-check">
                    <input x-model="formData.isEnabled" type="checkbox" id="widget-enabled" class="form-check-input" />
                    <label for="widget-enabled" class="form-check-label">@SharedLocalizer["Enabled"]</label>
                </div>

                <!-- LinkList Content Editor -->
                <div x-show="formData.widgetType === 'LinkList'" id="linklist-editor" class="mb-3">
                    <hr />
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <label class="form-label mb-0">Links</label>
                        <button type="button" x-on:click="addNewLink()" class="btn btn-sm btn-outline-accent">
                            <i class="bi-plus-lg"></i> Add Link
                        </button>
                    </div>
                    <div id="links-container" style="max-height: 400px; overflow-y: auto;">
                        <p x-show="!hasLinks" class="text-muted small text-center py-3 mb-0">No links added yet</p>
                        <template x-for="(link, index) in sortedLinks" :key="index">
                            <div class="link-item border rounded p-2 mb-2 bg-light">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <strong class="text-truncate me-2" x-text="link.name || 'Unnamed Link'"></strong>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" x-on:click="moveLink(index, -1)" 
                                                class="btn btn-outline-secondary" 
                                                :disabled="index === 0">
                                            <i class="bi-arrow-up"></i>
                                        </button>
                                        <button type="button" x-on:click="moveLink(index, 1)" 
                                                class="btn btn-outline-secondary" 
                                                :disabled="index === sortedLinks.length - 1">
                                            <i class="bi-arrow-down"></i>
                                        </button>
                                        <button type="button" x-on:click="editLink(index)" 
                                                class="btn btn-outline-accent">
                                            <i class="bi-pen"></i>
                                        </button>
                                        <button type="button" x-on:click="removeLink(index)" 
                                                class="btn btn-outline-danger">
                                            <i class="bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="small text-muted">
                                    <div class="text-truncate">
                                        <i x-show="link.icon" :class="link.icon" class="me-1"></i>
                                        <a :href="link.url" target="_blank" x-text="link.url"></a>
                                    </div>
                                    <div>
                                        <i :class="link.openInNewTab ? 'bi-box-arrow-up-right' : 'bi-arrow-return-right'"></i>
                                        <span x-text="link.openInNewTab ? 'Opens in new tab' : 'Opens in same tab'"></span>
                                        <span x-text="` #${link.order}`"></span>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>

                <!-- ButtonLink Content Editor -->
                <div x-show="formData.widgetType === 'ButtonLink'" id="buttonlink-editor" class="mb-3">
                    <hr />
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <label class="form-label mb-0">@SharedLocalizer["Buttons"]</label>
                        <button type="button" x-on:click="addNewButton()" class="btn btn-sm btn-outline-accent" :disabled="formData.buttons.length >= 3">
                            <i class="bi-plus-lg"></i> @SharedLocalizer["Add Button"]
                        </button>
                    </div>
                    <p x-show="formData.buttons.length >= 3" class="text-muted small">@SharedLocalizer["Maximum 3 buttons allowed"]</p>
                    <div id="buttons-container">
                        <p x-show="formData.buttons.length === 0" class="text-muted small text-center py-3 mb-0">@SharedLocalizer["No buttons added yet"]</p>
                        <template x-for="(btn, bIdx) in formData.buttons" :key="bIdx">
                            <div class="border rounded p-2 mb-2 bg-light">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <strong class="text-truncate me-2" x-text="btn.text || 'Unnamed Button'"></strong>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" x-on:click="editButton(bIdx)" class="btn btn-outline-accent">
                                            <i class="bi-pen"></i>
                                        </button>
                                        <button type="button" x-on:click="removeButton(bIdx)" class="btn btn-outline-danger">
                                            <i class="bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="small text-muted">
                                    <div class="text-truncate">
                                        <span class="badge" :class="'btn-sm ' + (btn.cssClass || 'btn-outline-primary')" x-text="btn.text"></span>
                                    </div>
                                    <div class="mt-1">
                                        <a :href="btn.url" target="_blank" x-text="btn.url" class="text-truncate d-inline-block" style="max-width:280px"></a>
                                    </div>
                                    <div>
                                        <i :class="btn.openInNewTab ? 'bi-box-arrow-up-right' : 'bi-arrow-return-right'"></i>
                                        <span x-text="btn.openInNewTab ? 'Opens in new tab' : 'Opens in same tab'"></span>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>

                <!-- ImageLink Content Editor -->
                <div x-show="formData.widgetType === 'ImageLink'" id="imagelink-editor" class="mb-3">
                    <hr />
                    <label class="form-label mb-2">Image Link Settings</label>
                    <div class="mb-3">
                        <label for="imagelink-image-url" class="form-label">@SharedLocalizer["Image URL"] *</label>
                        <input x-model="formData.imageLink.imageUrl" type="url" id="imagelink-image-url" class="form-control"
                               placeholder="https://example.com/image.png" />
                    </div>
                    <div class="mb-3">
                        <label for="imagelink-css-class" class="form-label">@SharedLocalizer["CSS Class"]</label>
                        <input x-model="formData.imageLink.cssClass" type="text" id="imagelink-css-class" class="form-control"
                               placeholder="img-fluid rounded" />
                    </div>
                    <div class="mb-3">
                        <label for="imagelink-title" class="form-label">@SharedLocalizer["Image Title"]</label>
                        <input x-model="formData.imageLink.title" type="text" id="imagelink-title" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="imagelink-alt" class="form-label">@SharedLocalizer["Alt Text"]</label>
                        <input x-model="formData.imageLink.altText" type="text" id="imagelink-alt" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="imagelink-link-url" class="form-label">@SharedLocalizer["Link URL"]</label>
                        <input x-model="formData.imageLink.linkUrl" type="url" id="imagelink-link-url" class="form-control"
                               placeholder="https://example.com" />
                        <small class="form-text text-muted">@SharedLocalizer["Leave empty if the image should not be a hyperlink"]</small>
                    </div>
                    <div class="mb-3 form-check">
                        <input x-model="formData.imageLink.openInNewTab" type="checkbox" id="imagelink-new-tab" class="form-check-input" />
                        <label for="imagelink-new-tab" class="form-check-label">@SharedLocalizer["Open in new tab"]</label>
                    </div>
                </div>
            </div>

            <!-- Fixed Bottom Buttons -->
            <div class="border-top p-3 bg-light">
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-accent">@SharedLocalizer["Save"]</button>
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="offcanvas">@SharedLocalizer["Cancel"]</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Confirm Delete Modal -->
<div class="modal fade" tabindex="-1" x-ref="confirmDeleteModal" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel" x-text="deleteConfirm.title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="@SharedLocalizer["Close"]"></button>
            </div>
            <div class="modal-body">
                <p x-text="deleteConfirm.message"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@SharedLocalizer["Cancel"]</button>
                <button type="button" class="btn btn-outline-danger" x-on:click="deleteConfirm.callback()">
                    <i class="bi-trash"></i>
                    <span x-text="deleteConfirm.buttonText"></span>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Link Dialog Modal -->
<div class="modal fade" tabindex="-1" x-ref="linkDialogModal" aria-labelledby="linkDialogLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="linkDialogLabel" x-text="linkDialog.isNew ? 'Add New Link' : 'Edit Link'"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="link-name" class="form-label">Link Name *</label>
                    <input x-model="linkDialog.data.name" type="text" id="link-name" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label for="link-url" class="form-label">URL *</label>
                    <input x-model="linkDialog.data.url" type="url" id="link-url" class="form-control" 
                           placeholder="https://example.com" required />
                </div>
                <div class="mb-3">
                    <label for="link-icon" class="form-label">Icon Class (optional)</label>
                    <input x-model="linkDialog.data.icon" type="text" id="link-icon" class="form-control" 
                           placeholder="bi-link-45deg" />
                    <small class="form-text text-muted">Use Bootstrap Icons classes (e.g., bi-link-45deg, bi-github)</small>
                </div>
                <div class="mb-3">
                    <label for="link-order" class="form-label">Display Order</label>
                    <input x-model.number="linkDialog.data.order" type="number" id="link-order" class="form-control" 
                           min="0" required />
                </div>
                <div class="mb-3 form-check">
                    <input x-model="linkDialog.data.openInNewTab" type="checkbox" id="link-new-tab" class="form-check-input" />
                    <label for="link-new-tab" class="form-check-label">Open in new tab</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-outline-accent" x-on:click="saveLinkDialog()">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Button Dialog Modal -->
<div class="modal fade" tabindex="-1" x-ref="buttonDialogModal" aria-labelledby="buttonDialogLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="buttonDialogLabel" x-text="buttonDialog.isNew ? 'Add New Button' : 'Edit Button'"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="button-text" class="form-label">@SharedLocalizer["Button Text"] *</label>
                    <input x-model="buttonDialog.data.text" type="text" id="button-text" class="form-control" maxlength="64" required />
                </div>
                <div class="mb-3">
                    <label for="button-url" class="form-label">URL *</label>
                    <input x-model="buttonDialog.data.url" type="url" id="button-url" class="form-control"
                           placeholder="https://example.com" required />
                </div>
                <div class="mb-3">
                    <label for="button-css-class" class="form-label">@SharedLocalizer["CSS Class"]</label>
                    <input x-model="buttonDialog.data.cssClass" type="text" id="button-css-class" class="form-control"
                           placeholder="btn-sm btn-outline-primary" />
                    <small class="form-text text-muted">@SharedLocalizer["Bootstrap button classes excluding 'btn' (e.g., btn-sm btn-outline-primary, btn-danger)"]</small>
                </div>
                <div class="mb-3 form-check">
                    <input x-model="buttonDialog.data.openInNewTab" type="checkbox" id="button-new-tab" class="form-check-input" />
                    <label for="button-new-tab" class="form-check-label">@SharedLocalizer["Open in new tab"]</label>
                </div>
                <div class="mb-3">
                    <label class="form-label">@SharedLocalizer["Preview"]</label>
                    <div>
                        <a :href="buttonDialog.data.url || '#'" :class="'btn ' + (buttonDialog.data.cssClass || 'btn-outline-primary')" x-text="buttonDialog.data.text || 'Button'" target="_blank"></a>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@SharedLocalizer["Cancel"]</button>
                <button type="button" class="btn btn-outline-accent" x-on:click="saveButtonDialog()">@SharedLocalizer["Save"]</button>
            </div>
        </div>
    </div>
</div>