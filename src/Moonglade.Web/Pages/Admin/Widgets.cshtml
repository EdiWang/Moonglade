@page "/admin/widgets"

@{
    ViewBag.Title = "Widgets";
}

@section scripts {
    <script type="module" src="~/js/app/admin.widgets.mjs"></script>
}

@section admintoolbar {
    <div class="admin-toolbar pb-2 border-bottom mb-3">
        <a id="btn-new-widget" class="btn btn-outline-accent">
            <i class="bi-plus-lg"></i>
            @SharedLocalizer["New"]
        </a>
    </div>
}

<section class="widgets-list row">

</section>

@Html.AntiForgeryToken()

<div class="offcanvas offcanvas-end" tabindex="-1" id="editWidgetCanvas" aria-labelledby="editWidgetCanvasLabel" style="width: 500px;">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="editWidgetCanvasLabel">@SharedLocalizer["Widget Information"]</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <form id="edit-form">
            <input type="hidden" id="widget-id" />
            <div class="mb-3">
                <label for="widget-title" class="form-label">@SharedLocalizer["Title"]</label>
                <input type="text" id="widget-title" class="form-control" maxlength="128" required />
            </div>
            <div class="mb-3">
                <label for="widget-type" class="form-label">@SharedLocalizer["Widget Type"]</label>
                <select id="widget-type" class="form-select" required>
                    <option value="LinkList">Link List</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="widget-display-order" class="form-label">@SharedLocalizer["Display Order"]</label>
                <input type="number" id="widget-display-order" class="form-control" value="0" required />
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" id="widget-enabled" class="form-check-input" checked />
                <label for="widget-enabled" class="form-check-label">@SharedLocalizer["Enabled"]</label>
            </div>
            
            <!-- LinkList Content Editor -->
            <div id="linklist-editor" class="mb-3" style="display: none;">
                <hr />
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <label class="form-label mb-0">Links</label>
                    <button type="button" id="btn-add-link" class="btn btn-sm btn-outline-accent">
                        <i class="bi-plus-lg"></i> Add Link
                    </button>
                </div>
                <div id="links-container" style="max-height: 400px; overflow-y: auto;">
                    <p class="text-muted small text-center py-3 mb-0">No links added yet</p>
                </div>
            </div>
            
            <div class="mt-3">
                <button type="submit" class="btn btn-accent">@SharedLocalizer["Save"]</button>
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="offcanvas">@SharedLocalizer["Cancel"]</button>
            </div>
        </form>
    </div>
</div>