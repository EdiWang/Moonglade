@page "/admin/post/scheduled"
@inject IConfiguration Configuration

@{
    ViewBag.Title = "Scheduled";
    ViewBag.XData = "scheduledManager";
}

@section scripts {
    <script type="module" src="~/js/app/admin.scheduled.mjs"></script>
}

<div id="localizedStrings" style="display:none"
     data-delete-confirmation="@SharedLocalizer["Delete Confirmation?"]"
     data-post-deleted="@SharedLocalizer["Post deleted."]"
     data-post-published="@SharedLocalizer["Post published"]"
     data-post-postponed="@SharedLocalizer["Post postponed for {0} hour(s)"]"
     data-schedule-cancelled="@SharedLocalizer["Schedule cancelled, post moved to drafts"]">
</div>

@section admintoolbar {
    <partial name="_PostManageHeader" />
}

@Html.AntiForgeryToken()

@if (!BlogConfig.AdvancedSettings.EnablePostScheduler)
{
    <div class="alert alert-warning mb-3">
        @SharedLocalizer["Post scheduler is disabled, pending posts will not be published automatically."]
    </div>
}

<div>
    <div x-show="isLoading"
         class="text-muted mb-3"
         :class="{ 'd-flex align-items-center': isLoading }">
        <div class="spinner-border spinner-border-sm me-2" role="status"></div>
        <span>@SharedLocalizer["Loading..."]</span>
    </div>

    <div x-show="!isLoading && !hasPosts">
        <partial name="_NoPosts" />
    </div>

    <div x-show="!isLoading && hasPosts">
        <template x-for="post in sortedPosts" :key="post.id">
            <div :id="`post-${post.id}`" class="admin-post-entry p-3 mb-2 rounded-3 shadow-sm border">
                <div class="row">
                    <div class="col">
                        <a :href="`/admin/post/edit/${post.id}`">
                            <h6 x-text="post.title"></h6>
                        </a>
                        <div class="mb-2" x-text="post.contentAbstract"></div>
                        <div>
                            <i class="bi-clock"></i>

                            <span class="text-muted me-2">
                                @SharedLocalizer["Scheduled for"]

                                <time :data-utc-label="post.scheduledPublishTimeUtc" 
                                      x-text="formatScheduledTime(post.scheduledPublishTimeUtc)">
                                </time>
                            </span>
                        </div>
                    </div>

                    <div class="col-auto">
                        <button class="btn btn-outline-accent btn-sm btn-publish"
                                x-on:click="showPublishModal(post.id)">
                            <i class="bi-send"></i>
                            @SharedLocalizer["Publish Now"]
                        </button>
                        <button class="btn btn-outline-accent btn-sm btn-postpone"
                                x-on:click="postponePost(post.id)">
                            <i class="bi-clock"></i>
                            @SharedLocalizer["Postpone"]
                        </button>
                        <button class="btn btn-outline-accent btn-sm btn-cancel"
                                x-on:click="showCancelScheduleModal(post.id)">
                            <i class="bi-x-circle"></i>
                            @SharedLocalizer["Cancel"]
                        </button>
                        <a class="btn btn-outline-accent btn-sm btn-edit" :href="`/admin/post/edit/${post.id}`">
                            <i class="bi-pen"></i>
                        </a>
                        <button class="btn btn-outline-danger btn-sm btn-delete"
                                x-on:click="deletePost(post.id)">
                            <i class="bi-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        </template>
    </div>
</div>