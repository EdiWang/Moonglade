@page "/admin/post"
@{
    ViewBag.Title = "Posts";
    ViewBag.XData = "postManager";
}

@section scripts {
    <script type="module" src="~/js/app/admin.post.mjs"></script>
}

@section admintoolbar {
    <partial name="_PostManageHeader" />
}

@Html.AntiForgeryToken()

<div>
    <form x-on:submit.prevent="handleSearch()">
        <div class="d-flex search-box mb-3">
            <input type="search" 
                   x-model="searchTerm"
                   aria-label="Search" 
                   class="form-control" 
                   placeholder="@SharedLocalizer["Search"]" />
            <button class="btn btn-light btn-search my-sm-0" type="submit">
                <i class="bi-search text-dark"></i>
            </button>
        </div>
    </form>

    <div x-show="isLoading"
         class="text-muted mb-3"
         :class="{ 'd-flex align-items-center': isLoading }">
        <div class="spinner-border spinner-border-sm me-2" role="status"></div>
        <span>@SharedLocalizer["Loading posts..."]</span>
    </div>

    <div x-show="!isLoading && !hasPosts">
        <partial name="_NoPosts" />
    </div>

    <template x-for="post in posts" :key="post.id">
        <div :id="`post-${post.id}`" class="admin-post-entry p-3 mb-2 rounded-3 shadow-sm border">
            <div class="row">
                <div class="col">
                    <a :href="getPostUrl(post)"
                       class="d-inline-block"
                       :title="post.slug"
                       target="_blank">
                        <h6>
                            <span x-text="post.title"></span>
                            <i x-show="post.isFeatured" class="bi-star-fill text-warning"></i>
                            <span x-show="post.isOutdated" class="badge rounded-pill text-bg-secondary ms-2">Outdated</span>
                        </h6>
                    </a>
                    <div class="mb-2" x-text="post.contentAbstract"></div>
                    <div>
                        <i class="bi-calendar-event"></i>
                        <span class="text-muted me-2">
                            <time :data-utc-label="post.createTimeUtc" x-text="post.createTimeUtc"></time>
                        </span>
                    </div>
                </div>

                <div class="col-auto">
                    <a class="btn btn-outline-accent btn-sm btn-edit" 
                       :href="`/admin/post/edit/${post.id}`">
                        <i class="bi-pen"></i>
                    </a>
                    <button class="btn btn-outline-danger btn-sm btn-delete" 
                            x-on:click="deletePost(post.id)">
                        <i class="bi-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    </template>

    <nav x-show="!isLoading && totalPages > 1" aria-label="Page navigation" class="mt-4">
        <ul class="pagination">
            <li class="page-item" :class="{ 'disabled': currentPage === 1 }">
                <a class="page-link" href="#" x-on:click.prevent="goToPage(currentPage - 1)">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            
            <template x-for="page in paginationPages" :key="page">
                <li class="page-item" :class="{ 'active': page === currentPage }">
                    <a class="page-link" href="#" x-on:click.prevent="goToPage(page)" x-text="page"></a>
                </li>
            </template>
            
            <li class="page-item" :class="{ 'disabled': currentPage === totalPages }">
                <a class="page-link" href="#" x-on:click.prevent="goToPage(currentPage + 1)">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" tabindex="-1" x-ref="confirmModal" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">@SharedLocalizer["Confirm"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p x-text="confirmMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@SharedLocalizer["Cancel"]</button>
                <button type="button" class="btn btn-outline-danger" x-on:click="confirmAction()">@SharedLocalizer["Delete"]</button>
            </div>
        </div>
    </div>
</div>