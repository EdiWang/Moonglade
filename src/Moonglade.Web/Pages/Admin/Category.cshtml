@page "/admin/category"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Moonglade.Features.Category
@{
    ViewBag.Title = "Categories";
    ViewBag.XData = "categoryManager";
}

@section scripts {
    <script type="module" src="~/js/app/admin.category.mjs"></script>
}

<div id="localizedStrings" style="display:none"
     data-confirm-delete="@SharedLocalizer["Are you sure you want to delete this category?"]"
     data-category-deleted="@SharedLocalizer["Category deleted"]"
     data-category-created="@SharedLocalizer["Category created"]"
     data-category-updated="@SharedLocalizer["Category updated"]">
</div>

@section admintoolbar {
    <div class="admin-toolbar pb-2 border-bottom mb-3">
        <a x-on:click="initCreateCategory()" class="btn btn-outline-accent" role="button">
            <i class="bi-plus-lg"></i>
            @SharedLocalizer["New"]
        </a>
    </div>
}

@Html.AntiForgeryToken()

<div x-show="isLoading"
     class="text-muted mb-3"
     :class="{ 'd-flex align-items-center': isLoading }">
    <div class="spinner-border spinner-border-sm me-2" role="status"></div>
    <span>@SharedLocalizer["Loading categories..."]</span>
</div>

<div x-show="!isLoading && !hasCategories" class="alert alert-info">
    @SharedLocalizer["No categories yet."]
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <template x-for="cat in sortedCategories" :key="cat.id">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-title">
                        <a :href="`/CategoryList?slug=${encodeURIComponent(cat.slug)}`" target="_blank" x-text="cat.displayName"></a>
                    </h6>
                    <p class="mt-2 h-30px" x-text="cat.note"></p>
                    <small class="text-muted" x-text="cat.slug"></small>
                </div>
                <div class="card-footer">
                    <a x-on:click="editCategory(cat.id)" class="btn btn-sm btn-outline-accent me-2" role="button">
                        <i class="bi-pen"></i>
                    </a>
                    <a x-on:click="deleteCategory(cat.id)" class="btn btn-sm btn-outline-danger" role="button">
                        <i class="bi-trash"></i>
                    </a>
                </div>
            </div>
        </div>
    </template>
</div>

<div class="offcanvas offcanvas-end" tabindex="-1" x-ref="editCatCanvas" aria-labelledby="editCatCanvasLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="editCatCanvasLabel">@SharedLocalizer["Category Information"]</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body d-flex flex-column p-0">
        <form x-on:submit.prevent="handleSubmit()" class="d-flex flex-column h-100">
            <!-- Form Fields - Takes remaining space -->
            <div class="flex-grow-1 p-3 pb-0" style="min-height: 0; overflow-y: auto;">
                <div class="mb-3">
                    <label class="form-label" asp-for="@EditCategoryRequest.DisplayName"></label>
                    <input x-model="formData.displayName" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@EditCategoryRequest.Slug"></label>
                    <input x-model="formData.slug" class="form-control" required pattern="(?!-)([a-z0-9-]+)" />
                    <small class="text-muted">
                        @SharedLocalizer["lower case English letters (a-z) and numbers (0-9) with/out hyphen (-) in middle."]
                    </small>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@EditCategoryRequest.Note"></label>
                    <input x-model="formData.note" class="form-control" required />
                </div>
            </div>

            <!-- Fixed Bottom Buttons -->
            <div class="border-top p-3 bg-light">
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-accent">@SharedLocalizer["Submit"]</button>
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="offcanvas">@SharedLocalizer["Cancel"]</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" tabindex="-1" x-ref="confirmModal" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">@SharedLocalizer["Confirm"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p x-text="confirmMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@SharedLocalizer["Cancel"]</button>
                <button type="button" class="btn btn-outline-danger" x-on:click="confirmAction()">@SharedLocalizer["Delete"]</button>
            </div>
        </div>
    </div>
</div>

@functions
{
    public CreateCategoryCommand EditCategoryRequest { get; set; } = new();
}
