@page "/admin/account"
@{
    ViewBag.Title = "Account";
    ViewBag.XData = "accountManager";
}

@Html.AntiForgeryToken()

@section scripts {
    <script type="module" src="~/js/app/admin.localaccount.mjs"></script>
}

@section admintoolbar {
    <div class="admin-toolbar pb-2 border-bottom mb-3">
        <a class="btn btn-outline-accent" href="javascript:;" x-on:click="openResetPasswordModal()">
            <i class="bi-key"></i>
            @SharedLocalizer["Change Password"]
        </a>
    </div>
}

<div class="alert alert-warning">
    Local account is not secure. It's recommended to use <a href="https://learn.microsoft.com/en-us/azure/active-directory/fundamentals/whatis?WT.mc_id=AZ-MVP-5002809">Microsoft Entra ID</a> for authentication. Click <a href="https://github.com/EdiWang/Moonglade/wiki/Use-Microsoft-Entra-ID-Authentication" target="_blank">here</a> to configure.
</div>

<h4 class="admin-subtitle fw-bold mb-2">
    Last 10 sign in activities
</h4>

<div x-show="isLoading"
     class="text-muted mb-3"
     :class="{ 'd-flex align-items-center': isLoading }">
    <div class="spinner-border spinner-border-sm me-2" role="status"></div>
    <span>@SharedLocalizer["Loading login history..."]</span>
</div>

<div x-show="!isLoading && !hasLoginHistory" class="alert alert-info">
    @SharedLocalizer["No login history yet."]
</div>

<div x-show="!isLoading && hasLoginHistory" class="mb-4 rounded-3 shadow-sm border bg-white p-2">
    <table class="table table-borderless mb-0">
        <thead>
            <tr>
                <th>@SharedLocalizer["Login IP"]</th>
                <th>@SharedLocalizer["Login Time (UTC)"]</th>
                <th>@SharedLocalizer["User Agent"]</th>
            </tr>
        </thead>
        <tbody>
            <template x-for="item in loginHistory" :key="item.id">
                <tr>
                    <td x-text="item.loginIp"></td>
                    <td x-text="formatTime(item.loginTimeUtc)"></td>
                    <td x-text="item.loginUserAgent"></td>
                </tr>
            </template>
        </tbody>
    </table>
</div>

<div class="modal fade" id="resetPasswordModal" tabindex="-1" role="dialog" aria-labelledby="resetPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="resetPasswordModalLabel">@SharedLocalizer["Reset Password"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>

            <form x-on:submit.prevent="resetPassword">
                <div class="modal-body">
                    <div class="mb-2">
                        <label for="NewUsername">New username</label>
                        <input class="form-control" type="text"
                               id="NewUsername"
                               x-model="formData.newUsername"
                               minlength="3"
                               maxlength="16"
                               pattern="^[A-Za-z0-9]{3,16}$"
                               required>
                        <div class="text-muted">English letters and numbers only.</div>
                    </div>
                    <div class="mb-2">
                        <label for="OldPassword">Old password</label>
                        <input class="form-control" type="password"
                               id="OldPassword"
                               x-model="formData.oldPassword"
                               minlength="8"
                               maxlength="32"
                               pattern="^(?=.*[a-zA-Z])(?=.*[0-9])[A-Za-z0-9._~!@@#$^&*]{8,}$"
                               required>
                    </div>
                    <div class="mb-2">
                        <label for="NewPassword">New password</label>
                        <input class="form-control" type="password"
                               id="NewPassword"
                               x-model="formData.newPassword"
                               minlength="8"
                               maxlength="32"
                               pattern="^(?=.*[a-zA-Z])(?=.*[0-9])[A-Za-z0-9._~!@@#$^&*]{8,}$"
                               required>
                    </div>
                    <div class="text-muted">
                        Your password must be:
                        <ul>
                            <li>Contain at least one letter (can be either lowercase or uppercase).</li>
                            <li>Contain at least one digit.</li>
                            <li>Be at least 8 characters long.</li>
                            <li>Only contain characters from the set: uppercase letters, lowercase letters, digits, and the special characters <code>._~!@@#$^&*`</code>.</li>
                        </ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-outline-accent">@SharedLocalizer["Submit"]</button>
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@SharedLocalizer["Cancel"]</button>
                </div>
            </form>
        </div>
    </div>
</div>
