@page "/admin/tags"
@using Moonglade.Data.Entities
@using Moonglade.Features.Tag
@{
    ViewBag.Title = "Tags";
    ViewBag.XData = "tagManager";
}

@section scripts {
    <script type="module" src="~/js/app/admin.tags.mjs"></script>
}

<div id="localizedStrings" style="display:none"
     data-tag-updated="@SharedLocalizer["Tag updated"]"
     data-tag-deleted="@SharedLocalizer["Tag deleted"]"
     data-tag-added="@SharedLocalizer["Tag added"]">
</div>

@section admintoolbar {
    <div class="admin-toolbar pb-2 border-bottom mb-3">
        <a x-on:click="initCreateTag()" class="btn btn-outline-accent" role="button">
            <i class="bi-plus-lg"></i>
            @SharedLocalizer["New"]
        </a>
    </div>
}

@Html.AntiForgeryToken()

<div>
    <input x-model="tagFilter"
           x-on:input="filterTags()"
           type="text"
           class="form-control mb-3"
           maxlength="32"
           placeholder="@SharedLocalizer["Filter"]"
           aria-label="@SharedLocalizer["Filter tags"]">

    <div x-show="isLoading"
         class="text-muted mb-3"
         :class="{ 'd-flex align-items-center': isLoading }">
        <div class="spinner-border spinner-border-sm me-2" role="status"></div>
        <span>@SharedLocalizer["Loading tags..."]</span>
    </div>

    <div x-show="!isLoading && !hasTags" class="alert alert-info" role="alert">
        @SharedLocalizer["No tags found. Create your first tag to get started."]
    </div>

    <div x-show="!isLoading && hasTags">
        <section aria-labelledby="active-tags-heading">
            <h4 id="active-tags-heading">@SharedLocalizer["Active tags"]</h4>
            <hr />
            <div x-show="!hasActiveTags" class="alert alert-info" role="alert">
                @SharedLocalizer["No active tags found"]
            </div>
            <ul x-show="hasActiveTags" class="list-unstyled ul-tag-mgr" role="list">
                <template x-for="tagItem in filteredActiveTags" :key="tagItem.tag.id">
                    <li :id="`li-tag-${tagItem.tag.id}`" class="admin-tag-item border rounded me-1">
                        <span class="span-tagcontent-editable"
                              contenteditable="true"
                              spellcheck="false"
                              :data-tagid="tagItem.tag.id"
                              x-on:blur="updateTag($event, tagItem.tag.id)"
                              :aria-label="`@SharedLocalizer["Edit tag"]` + ' ' + tagItem.tag.displayName"
                              x-text="tagItem.tag.displayName">
                        </span>
                        <span class="tag-postcount"
                              :title="`${tagItem.postCount} @SharedLocalizer["posts"]`"
                              x-text="tagItem.postCount">
                        </span>
                        <a class="btn-delete"
                           x-on:click="deleteTag(tagItem.tag.id, tagItem.tag.displayName)"
                           :aria-label="`@SharedLocalizer["Delete tag"]` + ' ' + tagItem.tag.displayName"
                           title="@SharedLocalizer["Delete tag"]"
                           role="button">
                            <i class="bi-trash"></i>
                        </a>
                    </li>
                </template>
            </ul>
        </section>

        <section aria-labelledby="inactive-tags-heading" class="mt-4">
            <h4 id="inactive-tags-heading">@SharedLocalizer["Tags without posts"]</h4>
            <hr />
            <div x-show="!hasInactiveTags" class="alert alert-success" role="alert">
                @SharedLocalizer["No unused tags - all tags are being used!"]
            </div>
            <ul x-show="hasInactiveTags" class="list-unstyled ul-tag-mgr" role="list">
                <template x-for="tagItem in filteredInactiveTags" :key="tagItem.tag.id">
                    <li :id="`li-tag-${tagItem.tag.id}`" class="admin-tag-item border rounded opacity-75">
                        <span class="span-tagcontent-editable"
                              contenteditable="true"
                              spellcheck="false"
                              :data-tagid="tagItem.tag.id"
                              x-on:blur="updateTag($event, tagItem.tag.id)"
                              :aria-label="`@SharedLocalizer["Edit tag"]` + ' ' + tagItem.tag.displayName"
                              x-text="tagItem.tag.displayName">
                        </span>
                        <a class="btn-delete"
                           x-on:click="deleteTag(tagItem.tag.id, tagItem.tag.displayName)"
                           :aria-label="`@SharedLocalizer["Delete tag"]` + ' ' + tagItem.tag.displayName"
                           title="@SharedLocalizer["Delete tag"]"
                           role="button">
                            <i class="bi-trash"></i>
                        </a>
                    </li>
                </template>
            </ul>
        </section>
    </div>
</div>

<div class="offcanvas offcanvas-end" tabindex="-1" x-ref="editTagCanvas" aria-labelledby="editTagCanvasLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="editTagCanvasLabel">@SharedLocalizer["Create Tag"]</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="@SharedLocalizer["Close"]"></button>
    </div>
    <div class="offcanvas-body">
        <form x-on:submit.prevent="handleSubmit()">
            <div class="mb-3">
                <label for="input-tag-name" class="form-label">
                    @SharedLocalizer["Name"] <span class="text-danger">*</span>
                </label>
                <input type="text"
                       x-model="formData.displayName"
                       id="input-tag-name"
                       class="form-control"
                       required
                       maxlength="50"
                       aria-describedby="tag-name-help"
                       placeholder="@SharedLocalizer["Enter tag name"]" />
                <div id="tag-name-help" class="form-text">
                    @SharedLocalizer["Tag names should be descriptive and concise."]
                </div>
                <div class="invalid-feedback">
                    @SharedLocalizer["Please provide a valid tag name."]
                </div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="offcanvas">
                    @SharedLocalizer["Cancel"]
                </button>
                <button type="submit" class="btn btn-outline-accent">
                    <i class="bi-check-lg"></i>
                    @SharedLocalizer["Submit"]
                </button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" tabindex="-1" x-ref="deleteModal" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">@SharedLocalizer["Delete Tag"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="@SharedLocalizer["Close"]"></button>
            </div>
            <div class="modal-body">
                <p>@SharedLocalizer["Confirm to delete tag:"] <strong x-text="deleteTarget.tagName"></strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@SharedLocalizer["Cancel"]</button>
                <button type="button" class="btn btn-outline-danger" x-on:click="confirmDelete()">
                    <i class="bi-trash"></i>
                    @SharedLocalizer["Delete"]
                </button>
            </div>
        </div>
    </div>
</div>
