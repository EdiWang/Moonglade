@page "/admin/page"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Moonglade.Features.Page
@{
    ViewBag.Title = "Pages";
    ViewBag.XData = "pageManager";
}

@section scripts {
    <script type="module" src="~/js/app/admin.blogpage.mjs"></script>
}

<div id="localizedStrings" style="display:none"
     data-page-deleted="@SharedLocalizer["Page deleted"]">
</div>

@section admintoolbar {
    <div class="admin-toolbar pb-2 border-bottom mb-3">
        <a class="btn btn-outline-accent" asp-page="./EditPage">
            <i class="bi-plus-lg"></i>
            @SharedLocalizer["New"]
        </a>

        <a asp-action="ExportDownload" asp-controller="DataPorting" asp-route-type="Pages" class="btn btn-outline-accent" target="_blank">
            <i class="bi-upload"></i>
            @SharedLocalizer["Export"]
        </a>
    </div>
}

@Html.AntiForgeryToken()

<div x-show="isLoading"
     class="text-muted mb-3"
     :class="{ 'd-flex align-items-center': isLoading }">
    <div class="spinner-border spinner-border-sm me-2" role="status"></div>
    <span>@SharedLocalizer["Loading pages..."]</span>
</div>

<div x-show="!isLoading && !hasPages" class="empty-recycle">
    <div class="text-center">
        <h4>@SharedLocalizer["No Pages"]</h4>
        <p class="text-muted">@SharedLocalizer["no items to show"]</p>
    </div>
</div>

<div x-show="!isLoading && hasPages" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <template x-for="page in sortedPages" :key="page.id">
        <div class="col">
            <div class="card shadow-sm mb-4" :id="`card-${page.id}`">
                <div class="card-body">
                    <h6 class="card-title">
                        <a :href="`/page/${encodeURIComponent(page.slug)}`" target="_blank" x-text="page.title"></a>
                    </h6>
                    <p class="mt-2 h-30px" x-text="page.slug"></p>
                    <small class="text-muted" x-text="formatDate(page.createTimeUtc)"></small>
                </div>
                <div class="card-footer">
                    <a class="btn btn-outline-accent btn-sm btn-edit" :href="`./page/edit/${page.id}`">
                        <i class="bi-pen"></i>
                    </a>
                    <a x-on:click="showDeleteModal(page.id)" class="btn btn-outline-danger btn-sm btn-delete" role="button">
                        <i class="bi-trash"></i>
                    </a>
                </div>
            </div>
        </div>
    </template>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmModalLabel">@SharedLocalizer["Confirm Delete"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @SharedLocalizer["Are you sure you want to delete this page?"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@SharedLocalizer["Cancel"]</button>
                <button type="button" class="btn btn-outline-danger" x-on:click="confirmDelete()">@SharedLocalizer["Delete"]</button>
            </div>
        </div>
    </div>
</div>
