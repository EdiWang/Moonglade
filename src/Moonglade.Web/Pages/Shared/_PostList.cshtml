@using Moonglade.Web.PagedList
@model BasePagedList<Moonglade.Core.PostFeature.PostDigest>
@inject IConfiguration Configuration

@foreach (var item in Model)
{
    <partial name="_PostListEntry" model="item" />
}


@Html.PagedListPager(Model, page => $"?p={page}", new()
{
    UlElementClasses = ["pagination justify-content-end"],
    MaximumPageNumbersToDisplay = int.Parse(Configuration["Post:MaximumPageNumbersToDisplay"])
})
