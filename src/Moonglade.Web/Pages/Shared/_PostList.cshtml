@using Moonglade.Data.DTO
@using Moonglade.Web.PagedList
@model PagedResult<PostDigest>
@inject IConfiguration Configuration

@foreach (var item in Model.Items)
{
    <partial name="_PostListEntry" model="item" />
}

@{
    var maxPageNumbers = int.Parse(Configuration["Post:MaximumPageNumbersToDisplay"]);
}
<partial name="_Pager" model="new PagerModel(Model.PageNumber, Model.PageCount, maxPageNumbers)" />
