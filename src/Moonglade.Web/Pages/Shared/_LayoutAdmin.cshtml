@inject IOptions<AuthenticationSettings> AuthOptions
@inject IConfiguration Configuration
@inject Moonglade.Web.Services.UpdateCheckerState UpdateCheckerState

@{
    if (string.IsNullOrEmpty(BlogConfig.GeneralSettings.AvatarUrl))
    {
        BlogConfig.GeneralSettings.AvatarUrl = Url.Action("Avatar", "Assets");
    }

    bool clientPreferDarkMode = Helper.IsClientPreferDarkMode(Context);
    bool hideAdminSidebar = ViewBag.HideAdminSidebar == true;
    string adminBackUrl = ViewBag.AdminBackUrl as string;
}
<!DOCTYPE html>
<html lang="@BlogConfig.GeneralSettings.DefaultLanguageCode" data-bs-theme="@(clientPreferDarkMode ? "dark" : null)">

<head>
    <title>
        @BlogConfig.GeneralSettings.SiteTitle @SharedLocalizer["Admin"] @(ViewBag.Title != null ? $"- {ViewBag.Title}" : null)
    </title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    @await RenderSectionAsync("meta", false)
    <link rel="start" title="@BlogConfig.GeneralSettings.SiteTitle" href="~/" />
    <partial name="_Favicons" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/fonts/font.css" rel="stylesheet" />
    <link href="~/css/base.css" rel="stylesheet" />
    <link href="~/css/rwd.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
    <link href="~/theme.css" rel="stylesheet" />
    <link href="~/Moonglade.Web.styles.css" rel="stylesheet" />
    @await RenderSectionAsync("head", false)
</head>

<body class="admin-body bg-gray-1">
    <nav class="admin-navbar navbar sticky-top navbar-expand-lg navbar-moonglade" data-bs-theme="dark">
        <a class="navbar-brand font-sairas" asp-page="/Admin/Post">
            @BlogConfig.GeneralSettings.SiteTitle
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            @if (!string.IsNullOrEmpty(adminBackUrl))
            {
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="btn-nav-back btn btn-sm btn-outline-light my-1 me-2" href="@adminBackUrl" title="Back">
                            <i class="bi-arrow-left me-1"></i>
                            @SharedLocalizer["Back"]
                        </a>
                    </li>
                </ul>
            }

            <ul class="navbar-nav @(string.IsNullOrEmpty(adminBackUrl) ? "ms-auto" : "")">
                @if (UpdateCheckerState.HasNewVersion)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="https://github.com/EdiWang/Moonglade/releases" target="_blank" rel="noopener noreferrer">
                            <i class="bi-arrow-up-circle me-1"></i>
                            @SharedLocalizer["New version available"]: @UpdateCheckerState.NewVersion
                        </a>
                    </li>
                }

                @await RenderSectionAsync("navbarActions", false)
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Admin/About" title="about link">
                        <i class="bi-info-circle"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Admin/ActivityLogs" title="activity logs link">
                        <i class="bi-card-list"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Index" target="_blank" title="home page link">
                        <i class="bi-house"></i>
                    </a>
                </li>
            </ul>

            <span class="navbar-text me-2">
                @if (AuthOptions.Value.Provider == AuthenticationProvider.Local)
                {
                    <a asp-page="/Admin/LocalAccount">
                        <img src="@BlogConfig.GeneralSettings.AvatarUrl" alt="@BlogConfig.GeneralSettings.OwnerName"
                             class="rounded-circle admin-nav-head-pic me-1" />
                        <userinfo user="User" user-info-display="PreferName"></userinfo>
                    </a>
                }
                else
                {
                    <img src="@BlogConfig.GeneralSettings.AvatarUrl" alt="@BlogConfig.GeneralSettings.OwnerName"
                         class="rounded-circle admin-nav-head-pic me-1" />
                    <userinfo user="User"></userinfo>
                }
            </span>

            <a class="navbar-text d-inline-block" asp-controller="Auth" asp-action="SignOut" title="Sign Out">
                <i class="bi-box-arrow-right"></i>
            </a>
        </div>
    </nav>
    @if (hideAdminSidebar)
    {
        <div class="admin-editor-wrapper" x-data="@ViewBag.XData">
            @RenderBody()
        </div>
    }
    else
    {
        <div class="d-flex admin-body-wrapper">
            <partial name="_AsideAdmin" />
            <div class="admin-main mt-3 mb-3 me-3 ms-3" x-data="@ViewBag.XData">
                @await RenderSectionAsync("admintoolbar", false)

                <div class="admin-main-body">
                    @RenderBody()
                </div>
            </div>
        </div>
    }

    <partial name="_Toast" />
    <partial name="_AdminConfirmModal" />

    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="~/js/app/base.mjs"></script>

    @await RenderSectionAsync("scripts", false)
</body>

</html>